<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:background="@drawable/g2">

	<EditText
	    android:id="@+id/show_Text_show"
	    android:layout_width="320dp"
	    android:layout_height="410dp"
	    android:gravity="center"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	     android:editable="false"
	     android:textSize="20dp"
		android:background="@null"
		android:onClick="show_content_click"
	    android:hint="这是提示文本"
	    android:ems="10" >

	    <requestFocus />
	</EditText>

	<ImageView
	    android:id="@+id/show_Importance"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="24dp"
	    android:layout_marginTop="20dp" />

	<Button
	    android:id="@+id/notify"
	    android:layout_width="80dp"
	    android:layout_height="40dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/c1"
	    android:onClick="notifybutton"
	    android:text="修改" />

	<Button
	    android:id="@+id/done"
	    android:layout_width="80dp"
	    android:layout_height="40dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/c1"
	    android:onClick="returnbutton"
	    android:text="返回" />

	<Button
	    android:id="@+id/delete"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:background="@drawable/c2"
	    android:onClick="deletebutton" />

	<EditText
	    android:id="@+id/show_Time_show"
	    android:layout_width="260dp"
	    android:layout_height="40dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/show_Importance"
	    android:background="@null"
	    android:editable="false"
	    android:ems="10"
	    android:hint="这是提示文本"
	    android:textColor="#f0f" />

</RelativeLayout>